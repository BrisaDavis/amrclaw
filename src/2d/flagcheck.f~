c
c ----------------------------------------------------------------------------
c
      subroutine flagcheck(rectflags,ilo,ihi,jlo,jhi,mbuff,iflags)

      use amr_module
      implicit double precision (a-h, o-z)

      dimension rectflags(ilo-mbuff:ihi+mbuff,jlo-mbuff:jhi+mbuff)
      integer*1 iflags(ilo-mbuff:ihi+mbuff,jlo-mbuff:jhi+mbuff) 
c
c should really only check interior border cells here
      do 10 j = jlo-mbuff, jhi+mbuff
      do 10 i = ilo-mbuff, ihi+mbuff
        if (rectflags(i,j) .eq. goodpt) go to 10
        if (iflags(i,j) .ne. 1) then  !point not nested. turn off
             rectflags(i,j) = 0.
c        not using the turn to neg alg anymore, using iflags for domain nesting now
c        else   ! pt. ok, if on border turn back to positive
c             rectflags(i,j) = abs(rectflags(i,j))
        endif
 10   continue

      return
      end
