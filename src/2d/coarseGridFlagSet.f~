c
       subroutine coarseGridFlagSet(icoarse,ixlo,ixhi,jxlo,jhi,
     .                              ilo_coarse,ihi_coarse,
     .                              jlo_coasre,jhi_coarse,mbuff)

                                     
       integer*1 icoarse(ilo_coarse-mbuff:ihi_coarse+mbuff,
     .                   jlo_coarse-mbuff:jhi_coarse+mbuff)

c
c whole point of this routine is to index using the integer cords, not the
c  way its dimensioned and indexed in the calling routine setdomflags
c
       do 25 j = jxlo,jxhi         
       do 25 i = ixlo,ixhi         
          icoarse(i,j) = 1
 25    continue

       return
       end
